@page "/reports"
@model NexallApp.Pages.ReportsModel


<form method="get">
    <label for="minSpeed">Minimum Speed:</label>
    <input type="number" id="minSpeed" name="minSpeed" />

    <label for="fromDate">From Date:</label>
    <input type="date" id="fromDate" name="fromDate" asp-for="FromDate" />

    <label for="toDate">To Date:</label>
    <input type="date" id="toDate" name="toDate" asp-for="ToDate" />

    <button type="submit" name="showResults">Show results</button>
    <input type="hidden" name="pageNumber" value="1" />
</form>

@if (Request.Query.ContainsKey("showResults") || Request.Query.ContainsKey("pageNumber"))
{

    <div class="filter-conditions">
        @if (Model.MinSpeed > 0)
        {
            <p>Minimum Speed: @Model.MinSpeed</p>
        }

        @if (Model.FromDate != default(DateTime))
        {
            <p>From Date: @Model.FromDate.ToString("dd/MM/yyyy")</p>
        }

        @if (Model.ToDate != default(DateTime))
        {
            <p>To Date (excluding): @Model.ToDate.ToString("dd/MM/yyyy")</p>
        }
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Speed</th>
                <th>Car Registration Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var carData in Model.FilteredCarData)
            {
                <tr>
                    <td>@carData.Date</td>
                    <td>@carData.Speed</td>
                    <td>@carData.CarRegNo</td>
                </tr>
            }
        </tbody>
    </table>
 

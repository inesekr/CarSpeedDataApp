    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link"
                       asp-page="/Reports"
                       asp-route-pageNumber="@i"
                       asp-route-minSpeed="@Model.MinSpeed"
                       asp-route-fromDate="@Model.FromDate"
                       asp-route-toDate="@Model.ToDate">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>

}